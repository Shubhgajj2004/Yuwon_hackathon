<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_promo">

    <EditText
        android:id="@+id/Promo_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Promocode"
        android:padding="20dp" />

    <EditText
        android:id="@+id/min_amount2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Promo_txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Min amount"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/discount_percent2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_amount2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Percent discount"
        android:paddingBottom="20dp" />
    <TextView
        android:id="@+id/nothing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" %"
        android:layout_toRightOf="@+id/discount_percent2"
        android:textSize="25sp"
        android:layout_below="@+id/min_amount2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/updateItembtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nothing2"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#4CAF50"

        android:text="Update"
        android:textColor="#FFFAFA" />

    <Button
        android:id="@+id/deleteItembtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nothing2"

        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FF0000"
        android:text="Delete"
        android:textColor="#FFFAFA" />
    <ProgressBar
        android:id="@+id/progressBar_promo2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateItembtn3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/process_check_promo2"
        android:layout_below="@+id/updateItembtn3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#1EE34F"
        android:visibility="invisible"
        />

</RelativeLayout>