<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail_Item">

        <ImageView
            android:layout_width="245dp"
            android:layout_height="216dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/youwon"
            android:id="@+id/item_image2"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image2"
            android:layout_marginTop="30dp"
            android:hint="Name Of the Item"
            android:id="@+id/Item_name2"

            android:minHeight="48dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_name2"
            android:layout_marginTop="30dp"
            android:hint="Description"
            android:id="@+id/Item_des2"

            android:minHeight="48dp" />

        <EditText
            android:id="@+id/Item_amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_des2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Stock"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/Item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_amount2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center"
            android:hint="MRP"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/Item_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_price2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Effective price"
            android:inputType="number"
            android:minWidth="32dp" />

        <Button
            android:id="@+id/updateItembtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_price3"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#4CAF50"

            android:text="Update"
            android:textColor="#FFFAFA" />

        <Button
            android:id="@+id/deleteItembtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Item_price3"

            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#FF0000"
            android:text="Delete"
            android:textColor="#FFFAFA" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateItembtn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/process_check2"
            android:layout_below="@+id/updateItembtn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="#1EE34F"
            android:visibility="invisible"
            />




    </RelativeLayout>
</ScrollView>
