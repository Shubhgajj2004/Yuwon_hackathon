<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="15dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input_cart"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/temp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_name"
            android:layout_marginTop="8dp"
            android:text="Type:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_DOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_type"
            android:layout_marginTop="8dp"
            android:text="DOB:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_DOB"
            android:layout_marginTop="8dp"
            android:text="Sex:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pet_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bruno"
            android:layout_toRightOf="@+id/temp_name"
            android:textSize="18sp"
            android:textColor="@color/purple_500"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:id="@+id/pet_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_name"
            android:layout_marginTop="8dp"
            android:text="Dog"
            android:layout_toRightOf="@+id/temp_type"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="110dp"/>

        <TextView
            android:id="@+id/pet_DOB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_type"
            android:layout_marginTop="8dp"
            android:text="03/04/2016"
            android:layout_toRightOf="@+id/temp_DOB"
            android:textSize="18sp"
            android:textColor="#EE001C"
            android:layout_marginLeft="115dp"/>

        <TextView
            android:id="@+id/pet_sex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_DOB"
            android:layout_marginTop="8dp"
            android:text="Male"
            android:layout_toRightOf="@+id/temp_sex"
            android:textSize="18sp"
            android:textColor="#FF7931"
            android:layout_marginLeft="120dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>