<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:elevation="15dp"
    app:cardCornerRadius="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input_cart"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/temp_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_name3"
            android:layout_marginTop="8dp"
            android:text="Type:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_name_vacc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_type3"
            android:layout_marginTop="8dp"
            android:text="Vaccination Type:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temp_next_date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_Vacc_type3"
            android:layout_marginTop="8dp"
            android:text="Next Date :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pet_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/temp_name3"
            android:text="Bruno"
            android:textColor="@color/purple_500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pet_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_name3"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/temp_type3"
            android:text="Dog"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pet_Vacc_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp_type3"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/temp_name_vacc3"
            android:text="DHLPPC"
            android:textColor="#EE001C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pet_Next_date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_Vacc_type3"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/temp_next_date3"
            android:text="03/07/2022"
            android:textColor="#FF7931"
            android:textSize="18sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>